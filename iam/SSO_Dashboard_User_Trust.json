{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "",
      "Effect": "Allow",
      "Principal": {
        "Federated": "{{auth0_provider_arn}}"
      },
      "Action": "sts:AssumeRoleWithSAML",
      "Condition": {
        "StringEquals": {
          "SAML:iss": "urn:{{your_domain}}.auth0.com",
          "SAML:sub": "role:user"
        }
      }
    }
  ]
}
